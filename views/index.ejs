<body>
    <nav class="navbar navbar-expand-md bg-danger navbar-light">
        <a href="/" class="navbar-brand text-light font-weight-bold ml-3">
            <h5 class="text-dark"><i class="fas fa-link text-dark fa-2x mr-2"></i>URL SHRINKER</h5>
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse ml-3" id="navbarNav">
            <ul class="navbar-nav ml-5">
                <li class="nav-item mt-3 mr-4">
                    <a class="nav-link font-weight-bold text-light" href="/">
                        <h5>HOME</h5>
                    </a>
                </li>

                <li class="nav-item mt-3">
                    <a class="nav-link font-weight-bold text-light" href="/about">
                        <h5>ABOUT</h5>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container  text-center mt-5">
        <form method="POST">
            <input type="text" name="longurl" id="longurl" class="form-control" placeholder="Enter URL"
                autocomplete="off" required>
            <button type="submit" class="btn btn-success mt-3">Shrink</button>
        </form>



        <% if(data!="" ){ %>
            <h5 class="text-dark mt-4 font-weight-bold">Short URL</h5>
            <span class="text-primary"
                title="Click to copy link">
                <p id="getText" class="font-weight-bold" style="color : rgb(111, 111, 250)">
                    <%= data %>
                    <br>
                    <small class="text-dark" style="line-height: 1px;">(Copy & paste the link to the browser)</small>
                </p>

            </span>
            <% } %>

    </div>

